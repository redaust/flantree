<div class="container">
<h1 style="text-align: center;"> Appearance Editor</h1>
<%= simple_form_for(current_user,
 	url: registration_path(current_user),
 	 html: {method: :put},
 	 data: {turbo: false}) do |f| %>
 	 <div class="row">
 	 		<div class="col-12">
 	 			<div class="row mt-4">
 	 				<div class="col-4"> <%= image_tag(current_user.avatar, class: "avatar-image") if current_user.avatar.attached? %> </div>
 	 				<div class="col-4"> <%= f.input :avatar, required:false, label: false %> </div>
 	 				<div class="col-4"> <%= f.submit "Update avatar" %></div>
 	 			</div>
 	 		</div>
 	 </div>
 <% end %>
</div>
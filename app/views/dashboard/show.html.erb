<div class="container">
	<div class="row">
		<div class="col-1"></div>
			<div class="col-10">
				<div class="row">
					<div class="col-12 d-flex justify-content-center">
						<%= image_tag(@user.avatar, class:"avatar-image") if @user.avatar.attached? %>
					</div>

					<div class="col-12 d-flex justify-content-center">
						<h2> @<%= @user.username %>, User # <%= @user.id %> </h2>
					</div>


					<div class="col-12 d-flex justify-content-center">
						<h2> <%= @user.full_name %> </h2>
					</div>
					<div class="col-12 d-flex justify-content-center">
						<p> <%= @user.body %> </p>
					</div>
				</div>
			</div>
			<div class="col-1"></div>
			<div class="row">
				<div class="col-1"></div>
				<div class="col-12">
					<% @links.each do |link| %>
						<%= link_to link.url, target: "_blank", class:"linkable btn btn-secondary" do %>
						<span class="linkable-span"><%= link.title %></span>



						<% end %>
					<% end %>

				 </div>
				<div class="col-1"></div>
		</div>
	</div>
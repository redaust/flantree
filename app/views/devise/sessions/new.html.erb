
<div class="container session-manager-container">
  <h2 class="session-manager-header">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions mt-2 d-flex justify-content-center">
      <%= f.button :submit, "Log in", class:"btn btn-dark", data: {turbo: false} %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>